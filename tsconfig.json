{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "sourceMap": false,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*"]
      },
      "typeRoots": ["@types", "./node_modules/@types"],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": false
   },
   "include": ["src"]
}
